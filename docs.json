{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Paragon",
  "appearance": {
    "default": "dark"
  },
  "colors": {
    "primary": "#3b82f6",
    "light": "#3b82f6",
    "dark": "#3b82f6"
  },
  "styling": {
    "eyebrows": "section",
    "global": "/global.css"
  },
  "favicon": "/logo/polaritylogo.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index"
            ]
          },
          {
            "group": "Dashboard",
            "pages": [
              "dashboard/overview",
              "dashboard/issues",
              "dashboard/settings",
              "dashboard/integrations"
            ]
          },
          {
            "group": "Monitoring",
            "pages": [
              "dashboard/monitoring/overview",
              "dashboard/monitoring/setup",
              "dashboard/monitoring/creating",
              "dashboard/monitoring/alerts"
            ]
          },
          {
            "group": "Testing",
            "pages": [
              "dashboard/testing/overview",
              "dashboard/testing/repos",
              "dashboard/testing/creating",
              "dashboard/testing/running",
              "dashboard/testing/scheduling",
              "dashboard/testing/analytics"
            ]
          },
          {
            "group": "Paragon CLI",
            "pages": [
              "paragon/overview",
              "paragon/commands",
              "paragon/tools",
              "paragon/e2e-testing",
              "paragon/configuration"
            ]
          },
          {
            "group": "AI Tools",
            "pages": [
              "claude-code",
              "cursor"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "faq"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/apps/paragon-review",
          "icon": "github"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@polarity.cc",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/polaritylogoblack.png",
    "dark": "/logo/polaritylogo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Install GitHub App",
        "href": "https://github.com/apps/paragon-review/installations/select_target"
      },
      {
        "label": "Support",
        "href": "mailto:support@polarity.cc"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://home.polarity.cc"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
}
