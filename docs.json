{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Polarity",
  "colors": {
    "primary": "#0a17b6",
    "light": "#0a17b6",
    "dark": "#0a17b6"
  },
  "modeToggle": {
    "default": "light",
    "isHidden": true
  },
  "favicon": "/logo/polaritylogo.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "quickstart",
              "dashboard",
              "cli"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/polaritylogoblack.png",
    "dark": "/logo/polaritylogo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Install GitHub App",
        "href": "https://github.com/apps/polarity-ai/installations/select_target"
      },
      {
        "label": "Support",
        "href": "mailto:support@polarity.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://home.polarity.cc"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
}
